<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%= title %></title>

    <link rel="stylesheet" href="/static/bootstrap-3.2.0-dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/static/bootstrap-3.2.0-dist/css/bootstrap-theme.min.css"/>
    <script type="text/javascript" src="/static/custom/js/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="/static/bootstrap-3.2.0-dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/static/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        var start = 0, limit = 20

        $(function () {
            loadGrid({});

            $("#train_add").click(function () {
                loadForm("");
            });

            $("#train_add_submit").click(function () {
                var form = $("#train_add_form").serializeArray();
                console.log("train_add:", form)
                var params = {};
                for (var i = 0; i < form.length; i++) {
                    var field = form[i];
                    params[field.name] = field.value;
                }
                //  params['student_desc']=CKEDITOR.instances.student_desc.getData();
                //  params['train_desc']=CKEDITOR.instances.train_desc.getData();

                $.post("/admin/train/add", params, function (data, status, xhr) {
                    $("#train_add_form")[0].reset();
                    loadGrid({});
                });
            });
        })

        function loadGrid(params) {
            params['start'] = start;
            params['limit'] = limit;
            $.get("/admin/train/search", params, function (data, status, xhr) {
                $("#train_grid").html(data);
            })
        }

        function loadForm(id) {
            $('#train_model').load("/admin/train/form", {id: id}).modal()
        }
    </script>
</head>
<body>
<div class="panel panel-default">
    <div class="panel-heading breadcrumb">
        <li><h3 class="panel-title">词库管理</h3></li>
        <div class="btn-toolbar pull-right">
            <div class="btn-group">
                <a id="train_add" class="btn btn-primary btn-xs">新增</a>
            </div>
        </div>
    </div>
    <div id="train_grid" class="panel-body">

    </div>
    <div class="panel-footer">Panel footer</div>
</div>

<div id="train_model" class="modal fade"></div>

</body>
</html>